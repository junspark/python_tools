


# Macro for FPGA to switch between detector signals

# liu_apr13 : GE + Ret 

def _signals_input_1id '{
    # inputs
    epics_put("1id:softGlue:FI1_Signal", "Sweep", 1)
    epics_put("1id:softGlue:FI2_Signal", "RetExp", 1)

    epics_put("1id:softGlue:FI13_Signal", "GE2tot", 1)
    epics_put("1id:softGlue:FI14_Signal", "GE2SE", 1)

    epics_put("1id:softGlue:FI12_Signal", "UserTTL1", 1)

}'

def _signals_input_1ide '{
    # inputs
    
    epics_put("1ide:sg2:FI15_Signal", "NFExp", 1)
    epics_put("1ide:sg2:FI16_Signal", "TomoExp", 1)
}'

def TomoDet_select '{

    _signals_input_1ide

    # outputs
    epics_put("1ide:sg2:FO24_Signal", "TomoExp", 1) # RetExp signal to 1id
}'

def NFDet_select '{

    _signals_input_1ide

    # outputs
    epics_put("1ide:sg2:FO24_Signal", "NFExp", 1) # RetExp signal to 1id
}'

 
def FS_Sweep_control '{
    _signals_input_1id

    # outputs
    epics_put("1id:softGlue:FO24_Signal", "Sweep", 1) # to fast shutter

}'

def FS_Retiga_control'{
    _signals_input_1id

    # outputs
    epics_put("1id:softGlue:FO24_Signal", "RetExp", 1) # to fast shutter

}'

def FS_GE2SE_control'{
    _signals_input_1id

    # outputs
    epics_put("1id:softGlue:FO24_Signal", "GE2SE", 1) # to fast shutter
    epics_put("1id:softGlue:FO18_Signal", "GE2SE", 1)
    epics_put("1id:softGlue:FO19_Signal", "GE2tot", 1)

}'

def FS_GE2tot_control'{
    _signals_input_1id

    # outputs
    epics_put("1id:softGlue:FO24_Signal", "GE2tot", 1) # to fast shutter
    epics_put("1id:softGlue:FO18_Signal", "GE2SE", 1)
    epics_put("1id:softGlue:FO19_Signal", "GE2tot", 1)

}'


def FS_UserTTL1_control'{
    _signals_input_1id

    # outputs
    epics_put("1id:softGlue:FO24_Signal", "UserTTL1", 1) # to fast shutter
    epics_put("1id:softGlue:FO23_Signal", "UserTTL1", 1) # to fast shutter

}'


