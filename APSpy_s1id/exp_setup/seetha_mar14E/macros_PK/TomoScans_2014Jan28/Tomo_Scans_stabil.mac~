def TomoVolScan_XPa1(bScanType, fOmegaBegin, fOmegaStop, fOmegaStep, fExposureTime, sPrefix) '{
    local omega isamY istage
	if (bScanType == 0 || (fOmegaBegin == 0 && fOmegaStop == 0 && sPrefix == 0)) {
		p ""
		p "Usage: TomoVolScan(bScanType, fOmegaBegin, fOmegaStop, fOmegaStep, fExposureTime, sPrefix)"
		p "           bScanType: Still Images, if 1; Sweeped Images, if 2."
		p "       This will use the stageXX for moving out the sample!!!!"
		p "       It assumes that the stage is at the center at the beginning!!!"
		p ""
	} else {
     
        local omega isamY nsamY samYstep
        local stagestep nstage istage
        local startstage

        # This is for Amanda
        p ""
        p " PLEASE MAKE SURE THE LIGHTS ARE OFF!!!"
        p ""
        stop_cont_acq
        umv aeroXE 0.0
        LightsOff
        
        get_angles
        startstage=A[aeroXE]

        stagestep=1.6 
        nstage=3 
        nsamY=1
        samYstep=0.8
            
        umv aeroXE startstage-((nstage-1)/2)*stagestep
            
        for (isamY = 0; isamY < nsamY; isamY++) {
  
            for (istage = 0; istage < nstage; istage++) {
                wm aeroXE samXE samZE samYE aero
                TomoScan(bScanType, fOmegaBegin, fOmegaStop, fOmegaStep, fExposureTime, sPrefix)
                p "aeroXE=", A[aeroXE]
                mvr aeroXE stagestep ; waitmove  
                p "aeroXE=", A[aeroXE]
            } 
            mvr aeroXE -nstage*stagestep ; waitmove
            p "samYE=", A[samYE]
            mvr samYE samYstep ; waitmove
            p "samYE=", A[samYE]
        }
        mvr samYE -nsamY*samYstep ; waitmove

        umv aeroXE startstage
    }
    
    #umv phi 92.5
    det_wait
    #TakeStillImage( fExposureTime )
    #p "The 180deg pair image is saved at:" A[aero]
    beep_dac; beep_dac
}'


